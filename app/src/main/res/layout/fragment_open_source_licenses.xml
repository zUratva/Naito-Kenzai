<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_content_padding"
    android:background="@color/secondaryBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/baseline_component_unit"
        android:textColor="@color/Black500"
        android:textSize="@dimen/typography_title"
        android:textStyle="bold"
        android:text="@string/dialog_open_source_licenses" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/baseline_component_unit"
        android:overScrollMode="never"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Cupboard: -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black500"
                android:textSize="@dimen/typography_subhead"
                android:textStyle="bold"
                android:text="@string/license_title_cupboard"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/baseline_component_unit"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/typography_caption"
                android:textStyle="italic"
                android:text="@string/license_author_cupboard"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/baseline_component_unit"
                android:padding="@dimen/baseline_component_unit"
                android:background="@color/primaryGrey200"
                android:autoLink="all"
                android:linksClickable="true"
                android:textColor="@color/primaryText"
                android:textColorLink="@color/accentPinkA200"
                android:textSize="@dimen/typography_body_1"
                android:text="@string/license_content_cupboard" />

            <!-- Disk Lru Cache: -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black500"
                android:textSize="@dimen/typography_subhead"
                android:textStyle="bold"
                android:text="@string/license_title_disk_lru_cache"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/baseline_component_unit"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/typography_caption"
                android:textStyle="italic"
                android:text="@string/license_author_disk_lru_cache"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/baseline_component_unit"
                android:padding="@dimen/baseline_component_unit"
                android:background="@color/primaryGrey200"
                android:autoLink="all"
                android:linksClickable="true"
                android:textColor="@color/primaryText"
                android:textColorLink="@color/accentPinkA200"
                android:textSize="@dimen/typography_body_1"
                android:text="@string/license_content_disk_lru_cache" />

            <!-- Event Bus: -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black500"
                android:textSize="@dimen/typography_subhead"
                android:textStyle="bold"
                android:text="@string/license_title_event_bus"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/baseline_component_unit"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/typography_caption"
                android:textStyle="italic"
                android:text="@string/license_author_event_bus"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/baseline_component_unit"
                android:padding="@dimen/baseline_component_unit"
                android:background="@color/primaryGrey200"
                android:autoLink="all"
                android:linksClickable="true"
                android:textColor="@color/primaryText"
                android:textColorLink="@color/accentPinkA200"
                android:textSize="@dimen/typography_body_1"
                android:text="@string/license_content_event_bus" />

            <!-- FloatingActionButton: -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black500"
                android:textSize="@dimen/typography_subhead"
                android:textStyle="bold"
                android:text="@string/license_title_floating_action_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/baseline_component_unit"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/typography_caption"
                android:textStyle="italic"
                android:text="@string/license_author_floating_action_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/baseline_component_unit"
                android:padding="@dimen/baseline_component_unit"
                android:background="@color/primaryGrey200"
                android:autoLink="all"
                android:linksClickable="true"
                android:textColor="@color/primaryText"
                android:textColorLink="@color/accentPinkA200"
                android:textSize="@dimen/typography_body_1"
